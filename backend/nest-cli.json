{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
        {
            "include": "translations/locales",
            "outDir": "dist/src",
            "watchAssets": true
        },
        {
            "include": "wasm",
            "outDir": "dist/src",
            "watchAssets": true
        }
    ]
  }
}
